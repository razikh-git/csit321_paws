<resources>

    <!-- Base application theme. -->
    <style name="mainAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Custom attributes. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorSecondary">@color/color_primary_alt</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_primary</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="editTextColor">@color/color_on_background</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="actionMenuTextColor">@color/color_on_background</item>

        <!-- Native attributes. -->
        <item name="android:colorBackground">@color/color_background</item>
        <item name="android:statusBarColor">@color/color_primary_alt</item>

    </style>

    <!-- Custom preloader splash screen. -->
    <style name="splashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Native attributes. -->
        <item name="android:colorBackground">@color/color_background</item>
        <item name="android:windowBackground">@drawable/splash_drawable</item>
        <item name="android:statusBarColor">@color/color_primary_alt</item>
    </style>

    <!-- Custom material text. -->
    <style name="TextAppearance.Paws.Immense" parent="TextAppearance.Paws.Small">
        <item name="android:textSize">@dimen/text_size_immense</item>
    </style>
    <style name="TextAppearance.Paws.Huge" parent="TextAppearance.Paws.Small">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>
    <style name="TextAppearance.Paws.Large" parent="TextAppearance.Paws.Small">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="TextAppearance.Paws.Medium" parent="TextAppearance.Paws.Small">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="TextAppearance.Paws.Small" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/color_on_background</item>
    </style>
    <style name="TextAppearance.Paws.Tiny" parent="TextAppearance.Paws.Small">
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="TextAppearance.Paws.Button.Block" parent="TextAppearance.Paws.Button.List">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.Paws.Button.List" parent="TextAppearance.Paws.Medium">
        <item name="android:textColor">@color/color_on_background</item>
    </style>
    <style name="TextAppearance.Paws.Button.Large" parent="TextAppearance.Paws.Button.Small">
        <item name="android:textSize">@dimen/text_size_button_large</item>
    </style>
    <style name="TextAppearance.Paws.Button.Medium" parent="TextAppearance.Paws.Button.Small">
        <item name="android:textSize">@dimen/text_size_button_medium</item>
    </style>
    <style name="TextAppearance.Paws.Button.Small" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_button_small</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="TextAppearance.Paws.Title" parent="TextAppearance.Paws.Small">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/noto</item>
    </style>
    <style name="TextAppearance.Paws.Caption" parent="TextAppearance.Paws.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:fontFamily">@font/noto</item>
    </style>
    <style name="TextAppearance.Paws.Icon" parent="TextAppearance.Paws.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- Custom material buttons. -->
    <style name="Widget.Paws.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Paws.Button.Small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_buttons</item>
        <item name="android:clipToPadding">false</item>
    </style>
    <style name="Widget.Paws.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Paws.Button.Small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_buttons</item>
        <item name="android:clipToPadding">false</item>
    </style>
    <style name="Widget.Paws.Button.Facebook" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Paws.Button.Small</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/padding_buttons</item>
        <item name="android:clipToPadding">false</item>
    </style>
    <style name="Widget.Paws.Button.TextButton.List" parent="Widget.Paws.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Paws.Button.List</item>
    </style>
    <style name="Widget.Paws.Button.TextButton.List.Icon" parent="Widget.Paws.Button.TextButton">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Paws.Button.List</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_on_background</item>
        <item name="iconTint">@color/color_grey</item>
        <item name="iconPadding">@dimen/text_spacing</item>
    </style>
    <style name="Widget.Paws.Button.TextButton.Block" parent="Widget.Paws.Button.TextButton.List">
        <item name="android:strokeWidth">2dp</item>
        <item name="android:strokeColor">@color/color_on_background</item>
    </style>

    <!-- Custom progress bars. -->
    <style name="Widget.Paws.ProgressBar.Circular" parent="Widget.AppCompat.ProgressBar">
        <item name="android:progressTint">@color/color_on_primary</item>
        <item name="android:indeterminateTint">@color/color_on_primary</item>
    </style>

    <!-- Custom bottom navigation bar. -->
    <style name="Widget.Paws.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:textAppearance">@style/TextAppearance.Paws.Icon</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <!-- Custom app theming. -->
    <style name="mainAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mainAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="mainAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

</resources>
