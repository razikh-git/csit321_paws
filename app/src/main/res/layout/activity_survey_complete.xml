<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveyCompleteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/app_spacing_huge"
        android:clipChildren="false"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="2dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/app_spacing_medium">

                <ImageView
                    android:id="@+id/imgCompleteIcon"
                    android:layout_width="@dimen/dimen_icon_immense"
                    android:layout_height="@dimen/dimen_icon_immense"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:tint="@color/color_primary"
                    app:srcCompat="@drawable/ic_checkbox_checked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sc_title"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Paws.Huge"
                    android:textColor="@color/color_primary_alt" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/sc_description"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Paws.Large" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>