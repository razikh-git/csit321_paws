<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/color_background"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity"
    tools:showIn="@layout/activity_home" >

    <LinearLayout
        android:id="@+id/layHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="2dp" >

        <LinearLayout
            android:id="@+id/layHomeBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="2dp" >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWarningBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_banners_contextual"
                android:backgroundTint="@color/color_error"
                android:visibility="gone"
                app:cardElevation="@dimen/elevation_banners">

                <LinearLayout
                    android:id="@+id/layWarningContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_buttons"
                        android:layout_marginEnd="@dimen/app_spacing"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/logo"
                        android:tint="@color/color_on_primary_light"/>

                    <TextView
                        android:id="@+id/txtWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/home_warning"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/color_on_primary_light"
                        android:textAppearance="@style/TextAppearance.Paws.Large" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layHomeBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_gutter"
            android:layout_marginEnd="@dimen/app_gutter"
            android:clipChildren="false"
            android:orientation="vertical" >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeatherData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_spacing" >

                <LinearLayout
                    android:id="@+id/layWeatherDataContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/layWeatherHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/text_spacing"
                        android:paddingEnd="@dimen/text_spacing"
                        android:paddingTop="@dimen/app_padding_half"
                        android:background="@color/color_primary_light"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_on_primary_light"
                            android:textAppearance="@style/TextAppearance.Paws.Huge" />

                        <LinearLayout
                            android:id="@+id/layWeatherMetadata"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layWeatherLocation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtCountry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/text_spacing"
                                    android:layout_gravity="bottom"
                                    android:textColor="@color/color_on_primary_light"
                                    android:textAppearance="@style/TextAppearance.Paws.Small" />

                                <TextView
                                    android:id="@+id/txtTimezone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/text_spacing"
                                    android:layout_gravity="bottom"
                                    android:textColor="@color/color_on_primary_light"
                                    android:textAppearance="@style/TextAppearance.Paws.Small" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtCoordinates"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/color_on_primary_light"
                                android:textAppearance="@style/TextAppearance.Paws.Small" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layWeatherDescription"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_icon_medium"
                        android:background="@color/color_primary_light"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/app_padding">

                        <ImageView
                            android:id="@+id/imgWeatherIcon"
                            android:layout_width="@dimen/dimen_icon_medium"
                            android:layout_height="@dimen/dimen_icon_medium"
                            android:gravity="start"
                            android:visibility="gone" />

                        <ProgressBar
                            android:id="@+id/barWeatherIcon"
                            style="@style/Widget.Paws.ProgressBar.Circular"
                            android:layout_width="@dimen/dimen_icon_medium"
                            android:layout_height="@dimen/dimen_icon_medium"
                            android:layout_gravity="center"
                            android:indeterminate="true"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/txtWeatherDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/app_padding"
                            android:textAppearance="@style/TextAppearance.Paws.Medium"
                            android:textColor="@color/color_on_primary_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layWeatherDataColumns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/app_padding"
                        android:paddingEnd="@dimen/app_padding"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:baselineAligned="false" >

                        <LinearLayout
                            android:id="@+id/layWeatherDataTemp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtTempCurrent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.Paws.Huge" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layWeatherDataWind"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/app_padding"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtWindSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.Paws.Small" />

                            <TextView
                                android:id="@+id/txtWindBearing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.Paws.Small" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layWeatherDataPrecip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/txtPrecipAuxData1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.Paws.Small" />

                            <TextView
                                android:id="@+id/txtPrecipAuxData2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.Paws.Small" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layWeatherFooter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/app_padding"
                        android:paddingEnd="@dimen/app_padding"
                        android:paddingBottom="@dimen/app_padding"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtFooterLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/home_weather_footer"
                            android:textAppearance="@style/TextAppearance.Paws.Small" />

                        <TextView
                            android:id="@+id/txtFooterTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.Paws.Small" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSurveys"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_home_cards"
                android:layout_marginTop="@dimen/app_spacing"
                app:cardBackgroundColor="@color/color_primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/home_card_surveys"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.Paws.Button.Large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/home_card_divider"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_card"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMaps"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_home_cards"
                android:layout_marginTop="@dimen/app_spacing"
                app:cardBackgroundColor="@color/color_primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/home_card_maps"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.Paws.Button.Large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/home_card_divider"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_card"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_home_cards"
                android:layout_marginTop="@dimen/app_spacing"
                app:cardBackgroundColor="@color/color_primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/home_card_profile"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.Paws.Button.Large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/home_card_divider"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/color_card"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHelpSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_spacing"
                android:layout_marginBottom="@dimen/app_gutter"
                app:cardBackgroundColor="@color/color_card">

                <LinearLayout
                    android:id="@+id/layHelpSettingsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSettings"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_home_cards"
                        android:layout_margin="@dimen/app_padding"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/color_primary_light">

                        <LinearLayout
                            android:id="@+id/laySettings"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/txtSettings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/home_card_settings"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.Paws.Button.Medium" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHelp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_home_cards"
                        android:layout_margin="@dimen/app_padding"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/color_primary_light">

                        <LinearLayout
                            android:id="@+id/layHelp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/txtHelp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/home_card_profile"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.Paws.Button.Medium" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/app_gutter"
                android:gravity="center"
                android:text="@string/home_footer"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Paws.Caption" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>